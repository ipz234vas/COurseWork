<UserControl x:Class="BattleCity.View.UserControls.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BattleCity.View.UserControls"
             xmlns:program="clr-namespace:BattleCity"
             mc:Ignorable="d" 
             Height="{Binding Source={x:Static program:GameConfig.WindowHeight}}"
             Width="{Binding Source={x:Static program:GameConfig.WindowWidth}}"
             Background="Black">
    <Grid>
        <Button Style="{StaticResource ImportantTextButton}" 
                Command="{Binding NavigateMenuCommand}" 
                Content="GO TO MENU" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Margin="30 30 0 0"
                BorderBrush="White"/>
        <Button Style="{StaticResource submitButton}" 
                Content="ACCOUNT SETTINGS"
                Foreground="Black"/>
    </Grid>
</UserControl>
