<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net7.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Fonts\BattleCity.ttf" />
    <None Remove="Fonts\BattleCityInfo.ttf" />
    <None Remove="Images\Ico.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Fonts\BattleCity.ttf" />
    <Resource Include="Fonts\BattleCityInfo.ttf" />
    <Resource Include="Images\Ico.ico">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

</Project>
